<h1><%= "#{@user.name}'s Page" %></h1>

<div>
  <!-- <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p> -->

  <% unless @user.image.empty? %>
    <%= image_tag @user.image, :alt => @user.name, :id => 'profile-img' %>
  <% end %>


  <% if @current_user.present? %>
  <button><%= link_to "Add a new itinerary", new_itinerary_path %></button>
  <button><%= link_to "Add a new activity", new_activity_path %></button>
  <% end %>

  <% unless @user.itineraries.empty? %>
    <h2>Itineraries</h2>
    <% @user.itineraries.each do |itinerary| %>
      <ul>
        <li>
          <%= link_to itinerary.name, itinerary %>
        </li>
      </ul>
    <% end %>
  <% end %>

</div>


<div class="controls">
  <%= link_to 'Edit member account', edit_user_path(@user) %> |
  <%= link_to 'Delete member account', @user, :method => 'delete', :data => { :confirm => 'Are you sure you want to delete this account?' } %>
</div>

<% if @current_user.present? && @current_user.admin %>
  <%= link_to 'Back', users_path %>
<% end %>
