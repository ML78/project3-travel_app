<h1>
  <%= @activity.name %>
</h1>

<div>
  <p>
    <strong>Description:</strong>
    <%= @activity.description %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @activity.category %>
  </p>

  <% unless @activity.image.empty? %>
    <%= image_tag @activity.image, :alt => @activity.name, :class => 'thumbnail' %>
  <% end %>

  <!-- <p>
    <strong>Location:</strong>
    <%= @activity.location_id %>
  </p> -->

  <div>
  <% unless @activity.itineraries.empty? %>
    <h3>Itineraries</h3>
    <% @activity.itineraries.each do |itinerary| %>
      <ul>
        <li>
          <%= link_to itinerary.name, itinerary %>
        </li>
      </ul>
    <% end %>
  <% end %>
  </div>

</div>

<%= link_to 'Edit', edit_activity_path(@activity) %> |
<%= link_to 'Back', activities_path %>
