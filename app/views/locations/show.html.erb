<h1>
  <%= @location.name %>
</h1>

<h2>
  <%= @location.country %>
</h2>

<div>
<% unless @location.activities.empty? %>
  <h3>Activities</h3>
  <% @location.activities.each do |activity| %>
    <ul>
      <li>
        <%= link_to activity.name, activity %>
      </li>
    </ul>
  <% end %>
<% end %>
</div>


<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
