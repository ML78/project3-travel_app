<h1>Sign in</h1>

  <!-- sign-in form for existing user -->

  <h3><%= flash[:error] %></h3>

  <%= form_tag login_path do %>

      <%= label_tag :email %>
      <%= email_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Sign in"%>

  <% end %>
  <div>
    [ <%= link_to "Sign up if you don't have an account yet", new_user_path %> ]
  </div>
